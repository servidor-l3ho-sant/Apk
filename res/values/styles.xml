<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme using basic Android themes -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <!-- ULTRAGOL modern colors -->
        <item name="android:colorBackground">#000000</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FF6B35</item>
        <item name="android:colorForeground">#FF6B35</item>
    </style>

    <!-- Full screen theme for splash -->
    <style name="AppTheme.FullScreen" parent="android:Theme.Holo.NoActionBar.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!-- Modern ULTRAGOL button style -->
    <style name="UltraGolButton" parent="android:Widget.Button">
        <item name="android:background">#FF6B35</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>