<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme - ULTRAGOL Dark Theme -->
    <style name="AppTheme" parent="android:Theme.Holo">
        <!-- Modern ULTRAGOL colors -->
        <item name="android:colorBackground">@color/ultragol_bg_dark</item>
        <item name="android:windowBackground">@color/ultragol_bg_dark</item>
        <item name="android:textColorPrimary">@color/ultragol_text_primary</item>
        <item name="android:textColorSecondary">@color/ultragol_text_secondary</item>
        <item name="android:colorForeground">@color/ultragol_primary</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Full screen theme for splash -->
    <style name="AppTheme.FullScreen" parent="android:Theme.Holo.NoActionBar.Fullscreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/ultragol_bg_dark</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <!-- Modern ULTRAGOL button styles -->
    <style name="UltraGolButton" parent="android:Widget.Button">
        <item name="android:background">@color/ultragol_primary</item>
        <item name="android:textColor">@color/ultragol_text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="UltraGolButtonSecondary" parent="android:Widget.Button">
        <item name="android:background">@color/ultragol_accent</item>
        <item name="android:textColor">@color/ultragol_text_primary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
    </style>
    
    <!-- Card styles for modern look -->
    <style name="UltraGolCard">
        <item name="android:background">@color/ultragol_bg_card</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">12dp</item>
    </style>
    
    <style name="UltraGolCardSecondary">
        <item name="android:background">@color/ultragol_bg_card_secondary</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>